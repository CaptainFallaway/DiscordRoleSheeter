#:kivy 2.3.0

#:include kv/roundedbutton.kv

<Seperator@FloatLayout>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Line:
            points: self.x, self.y + 20, self.x, self.y + self.height - 20
            width: 1
        Line:
            points: self.x + 1, self.y + 20, self.x + 1, self.y + self.height - 20
            width: 1


<ScrollableTextContainer@ScrollView>:
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]

    # Create a Label as a child of the ScrollView
    Label:
        id: lbl_changes
        text: 'N/A'
        size_hint: (None, None)
        size: (self.texture_size[0] + 20, self.texture_size[1] + 5)
        markup: True
        color: 0.65, 0.65, 0.65, 1
        align: 'left'


<ButtonPanel@BoxLayout>:
    orientation: 'vertical'

    size_hint: (0.6, 1)
    padding: 10
    spacing: 10

    RoundedButton:
        id: btn_pull
        text: 'Pull to excel'
        on_press: root.parent.parent.pull()

    RoundedButton:
        id: btn_push
        text: 'Push to discord'
        on_press: root.parent.parent.push()


<StatusPanel@BoxLayout>:
    orientation: 'vertical'

    size_hint: (1, 1)
    padding: 10
    spacing: 15

    Label:
        text: 'Edits:'
        size_hint: (1, 0.1)
        color: 0.65, 0.65, 0.65, 1
        bold: True

    ScrollableTextContainer:
        id: scrollable_text_container
        padding: 10

    Label:
        text: 'Latest pull:'
        size_hint: (1, 0.1)
        color: 0.65, 0.65, 0.65, 1
        bold: True

    Label:
        id: lbl_timestamp
        text: 'N/A'
        size_hint: (1, 0.1)
        color: 0.65, 0.65, 0.65, 1

    RoundedButton:
        text: "Refresh"
        size_hint: (1, 0.25)
        on_press: root.parent.parent.refresh()


<View>:
    BoxLayout:
        orientation: 'horizontal'
        size: root.width, root.height

        padding: 6
        spacing: 2

        # Background
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        ButtonPanel:
            id: button_panel

        Seperator:
            size_hint: (0.0001, 1)

        StatusPanel:
            id: status_panel

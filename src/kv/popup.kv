#:kivy 2.3.0

#:include kv/roundedbutton.kv


<WarningPopupContent@BoxLayout>:
    orientation: "vertical"
    spacing: 8

    ScrollView:
        Label:
            id: lbl_text
            text: ''
            font_size: 16
            align: "center"
            size_hint: (None, None)
            size: (self.texture_size[0] + 20, self.texture_size[1] + 20)
    RoundedButton:
        text: "OK"
        size_hint_y: 0.3
        on_release: root.parent.parent.parent.dismiss()


<WarningPopup>:
    seperator_height: 5
    background_color: 0, 0, 0, 0.1
    auto_dismiss: False

    title: root.title
    title_align: "center"
    title_size: 20

    WarningPopupContent:
        id: warning_content

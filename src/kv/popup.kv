#:kivy 2.3.0

#:include src/kv/roundedbutton.kv


<NotificationPopupContent@BoxLayout>:
    orientation: "vertical"
    spacing: 8

    ScrollView:
        Label:
            id: lbl_text
            text: ''
            markup: True
            font_size: 16
            align: "center"
            size_hint: (None, None)
            size: (self.texture_size[0] + 20, self.texture_size[1] + 20)
    RoundedButton:
        id: btn_ok
        size_hint_y: 0.3
        # "on_release" and "text" is declared in the python class in view.py


<NotificationPopup>:
    seperator_height: 5
    background_color: 0, 0, 0, 0.1
    auto_dismiss: False

    title: root.title
    title_align: "center"
    title_size: 20

    NotificationPopupContent:
        id: warning_content
